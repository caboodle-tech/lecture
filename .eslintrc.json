{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "Reveal": true
    },
    "ignorePatterns": [
        "**/*.min.js",
        "**/*.min.css"
    ],
    "rules": {
        "class-methods-use-this": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "default-case": "off",
        "import/extensions": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": ["error", { "code": 120 }],
        "no-continue": "off",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-use-before-define": "off",
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ]
    }
}